<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        app:columnCount="2"
        app:rowCount="8">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SIM"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_columnWeight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QuantitÃ©"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_columnWeight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#7CE040FB"
            android:text="INWI"
            android:textAlignment="center"
            android:textSize="16sp"
            app:layout_columnWeight="1" />

        <EditText
            android:id="@+id/stock_sim_inwi_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#81E040FB"
            android:textAlignment="center"
            android:textSize="16sp"
            app:layout_columnWeight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#A4FFAB40"
            android:text="ORANGE"
            android:textAlignment="center"
            android:textSize="16sp"
            app:layout_columnWeight="1" />

        <EditText
            android:id="@+id/stock_orange_sim_edittex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#A4FFAB40"
            android:textAlignment="center"
            android:textSize="16sp"
            app:layout_columnWeight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#9740C4FF"
            android:text="IAM"
            android:textAlignment="center"
            android:textSize="16sp"
            app:layout_columnWeight="1" />

        <EditText
            android:id="@+id/stock_iam_sim_edittex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#9740C4FF"
            android:textAlignment="center"
            android:textSize="16sp"
            app:layout_columnWeight="1" />

    </androidx.gridlayout.widget.GridLayout>
</FrameLayout>